from machine import Pin, ADC, mem32
from time import sleep

# Pines de los LEDs para los sem√°foros
luces_semaforos = [2, 4, 5, 12, 15, 16, 17, 18, 19, 21, 22, 23, 25, 26]
# Pines de sem√°foros vehiculares en rojo
luces_vehiculares_rojo = [4, 25, 23]
# Pines de sem√°foros peatonales en verde
luces_peatonales_verde = [5, 18, 21]
bandera = 0  # 0: Sem√°foro funcionando, 1: Medici√≥n de temperatura
modo_emergencia = 1  # 0: Normal, 1: Emergencia

# Funci√≥n para manejar la interrupci√≥n del pulsador que cambia entre sem√°foro y temperatura
def cambiar_modo(pin):
    global bandera
    if bandera == 0:
        bandera = 2  # Activar modo emergencia
    elif bandera == 2:
        bandera = 0  # Retornar al modo sem√°foro

# Funci√≥n para manejar la interrupci√≥n del pulsador que cambia a modo temperatura
def cambiar_a_temperatura(pin):
    global bandera
    if bandera == 0:
        bandera = 1  # Activar modo temperatura
    elif bandera == 1:
        bandera = 0  # Retornar al modo sem√°foro

# Configurar el pulsador para cambiar de modo (GPIO25)
pulsador_modo = Pin(14, Pin.IN, Pin.PULL_UP)
pulsador_modo.irq(trigger=Pin.IRQ_FALLING, handler=cambiar_modo)

pulsador_temperatura = Pin(27, Pin.IN, Pin.PULL_UP)
pulsador_temperatura.irq(trigger=Pin.IRQ_FALLING, handler=cambiar_a_temperatura)

# Configurar el sensor de temperatura LM35
sensor_temperatura = ADC(Pin(39))  # Entrada anal√≥gica para el sensor
sensor_temperatura.atten(ADC.ATTN_11DB)  # Atenuaci√≥n para rango completo (0-3.3V)
sensor_temperatura.width(ADC.WIDTH_10BIT)  # Resoluci√≥n de 10 bits

# Activar los pines de las luces de los sem√°foros
for pin_num in luces_semaforos:
    Pin(pin_num, Pin.OUT)

GPIO_OUT_REG = 0x03FF44004  # Direcci√≥n de los registros GPIO en el ESP32

# Ciclo principal
while True:
    
    while bandera == 0:  # Modo Sem√°foro
        
        print("Sem√°foro funcionando ‚òë")
        
        # üö¶ Fase 1: Vehicular Calle en rojo, giro vehicular en rojo, carr vehicular verde, peatonal calle verde, giro peatonal verde y carrera peatonal rojo 
        mem32[GPIO_OUT_REG] = 0b0000000110010001000000000000110000
        sleep(5)

        mem32[GPIO_OUT_REG] = 0b0000000110000001000000000000110100 
        sleep(5)
        
        mem32[GPIO_OUT_REG] = 0b0000000010001001000000000000110100
        sleep(5)
        
         # üö¶ Fase 1: Vehicular Calle en amari, giro vehicular en rojo, carr vehicular amari, peatonal calle verde y rojo, giro peatonal verde y carrera peatonal verde 
        mem32[GPIO_OUT_REG] = 0b0000000000101000110001000000100000
        sleep(5)

        mem32[GPIO_OUT_REG] = 0b0000000000101010110001000000000000
        sleep(5)

         # üö¶ Fase 1: Vehicular Calle en amari, giro vehicular en rojo, carr vehicular amari, peatonal calle verde y rojo, giro peatonal verde y carrera peatonal verde 
        mem32[GPIO_OUT_REG] = 0b0000000000101010101001000000000000
        sleep(5)

    while bandera == 2:
            print("semaforos en modo emergencia")
            mem32[GPIO_OUT_REG] = 0b0000000010101001000000000000110000
            sleep(10)
            
    while bandera == 1:  # Modo Temperatura
        
        print("Sensor de temperatura activado ‚òë")
        
        # Apagar todos los sem√°foros
        mem32[GPIO_OUT_REG] = 0b00000000000000000000000000000000
        
        # Leer el valor del sensor LM35
        valor_adc = sensor_temperatura.read()

        # Conversi√≥n de la lectura ADC a temperatura en grados Celsius
        voltaje = (valor_adc / 1023.0) * 3.3  # Convertir lectura a voltaje (0-3.3V)
        temperatura = voltaje * 100  # LM35 tiene una relaci√≥n de 10mV/¬∞C

        print("Temperatura:", round(temperatura, 2), "¬∞C")
        
        sleep(1)  # Espera para actualizar la lectura
